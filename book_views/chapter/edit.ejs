<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Chapter | Sanskrit Admin</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Playfair+Display:wght@500;600;700&display=swap" rel="stylesheet">
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/sidebar.css" rel="stylesheet">
    <style>
        :root {
            --primary: #2D3250;
            --secondary: #424769;
            --accent: #676F9D;
            --light: #F9F9F9;
            --dark: #1A1B26;
        }
        body {
            font-family: 'Inter', sans-serif;
            background: var(--light);
            min-height: 100vh;
        }
        .main-content {
            margin-left: 280px;
            padding: 2rem;
        }
        .topbar {
            background: white;
            padding: 1rem 2rem;
            border-radius: 16px;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            margin-bottom: 2rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
        .page-title {
            font-family: 'Playfair Display', serif;
            font-size: 1.5rem;
            color: var(--dark);
            margin: 0;
        }
        .form-card {
            background: white;
            border-radius: 16px;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            padding: 2rem;
        }
        .form-label {
            font-weight: 500;
            color: var(--dark);
            margin-bottom: 0.5rem;
        }
        .form-control {
            border: 1px solid #e2e8f0;
            border-radius: 8px;
            padding: 0.75rem 1rem;
        }
        .form-control:focus {
            border-color: var(--accent);
            box-shadow: 0 0 0 0.2rem rgba(103, 111, 157, 0.25);
        }
        .btn-primary {
            background: var(--primary);
            border: none;
            border-radius: 8px;
            padding: 0.75rem 1.5rem;
            font-weight: 600;
        }
        .btn-primary:hover {
            background: var(--accent);
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <nav class="sidebar">
        <%- include('../../partials/sidebar', { 
            activePage: 'book',
            activeCategory: null,
            koshCategories: [],
            mcqCategories: []
        }) %>
    </nav>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Breadcrumb -->
        <div class="breadcrumb-nav" style="display: flex; align-items: center; gap: 0.5rem; margin-bottom: 1rem; color: #424769; font-size: 0.9rem;">
            <a href="/book" style="color: #2D3250; text-decoration: none;">Book Categories</a>
            <span>/</span>
            <% if (chapter.category && chapter.category._id) { %>
                <a href="/book/category/<%= chapter.category._id %>" style="color: #2D3250; text-decoration: none;"><%= chapter.category.name %></a>
                <span>/</span>
            <% } %>
            <% if (chapter.book && chapter.book._id) { %>
                <a href="/book/category/<%= chapter.category._id || chapter.category %>/book/<%= chapter.book._id %>" style="color: #2D3250; text-decoration: none;"><%= chapter.book.name %></a>
                <span>/</span>
            <% } %>
            <span>Edit <%= chapter.name %></span>
        </div>

        <!-- Topbar -->
        <div class="topbar">
            <h1 class="page-title">Edit Chapter</h1>
            <a href="<%= returnPath || '/book' %>" class="btn btn-outline-secondary">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="me-2">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                </svg>
                Back
            </a>
        </div>

        <!-- Edit Form -->
        <div class="form-card">
            <form action="/book/chapter/edit/<%= chapter._id %>" method="POST">
                <input type="hidden" name="return" value="<%= returnPath || '/book' %>">
                <div class="mb-4">
                    <label for="name" class="form-label">Chapter Name</label>
                    <input type="text" class="form-control" id="name" name="name" value="<%= chapter.name %>" required>
                </div>

                <div class="mb-4">
                    <label for="category" class="form-label">Category</label>
                    <select class="form-control" id="category" name="category" required>
                        <option value="">Select Category</option>
                        <% const chapterCatId = chapter.category._id ? chapter.category._id.toString() : chapter.category.toString(); %>
                        <% categories.forEach(function(cat) { %>
                            <option value="<%= cat._id %>" <%= chapterCatId === cat._id.toString() ? 'selected' : '' %>>
                                <%= cat.name %>
                            </option>
                        <% }); %>
                    </select>
                </div>

                <div class="mb-4">
                    <label for="book" class="form-label">Book</label>
                    <select class="form-control" id="book" name="book" required>
                        <option value="">Select Book</option>
                        <% const chapterBookId = chapter.book._id ? chapter.book._id.toString() : chapter.book.toString(); %>
                        <% books.forEach(function(bk) { %>
                            <option value="<%= bk._id %>" <%= chapterBookId === bk._id.toString() ? 'selected' : '' %>>
                                <%= bk.name %>
                            </option>
                        <% }); %>
                    </select>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="me-2">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                        Save Changes
                    </button>
                </div>
            </form>
        </div>
    </main>

    <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html> 